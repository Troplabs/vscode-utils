{
  "name": "vscode-dx-utils",
  "displayName": "DX Utils",
  "description": "Utilities for developers",
  "publisher": "troplabs",
  "version": "0.0.2",
  "preview": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/troplabs/vscode-utils.git"
  },
  "author": "Nilesh Mali",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/troplabs/vscode-utils/issues"
  },
  "homepage": "https://github.com/troplabs/vscode-utils#readme",
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.90.0"
  },
  "enabledApiProposals": [],
  "categories": ["Other"],
  "pricing": "Free",
  "icon": "icon.png",
  "contributes": {
    "commands": [
      {
        "command": "utils.base64Encode",
        "title": "Encode to Base64"
      },
      {
        "command": "utils.base64Decode",
        "title": "Decode from Base64"
      },
      {
        "command": "utils.encodeURIComponent",
        "title": "Encode URI Component"
      },
      {
        "command": "utils.decodeURIComponent",
        "title": "Decode URI Component"
      }
    ],
    "keybindings": [
      {
        "command": "utils.base64Encode",
        "key": "ctrl+e ctrl+e",
        "mac": "cmd+e cmd+e",
        "when": "editorTextFocus"
      },
      {
        "command": "utils.base64Decode",
        "key": "ctrl+e ctrl+d",
        "mac": "cmd+e cmd+d",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vsce": "vsce",
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "test": "vscode-test",
    "lint": "biome check .",
    "update-proposed-api": "dts dev",
    "cleanup": "rimraf out dist"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/mocha": "10.0.10",
    "@types/node": "20.17.10",
    "@types/vscode": "1.96.0",
    "@vscode/dts": "0.4.1",
    "@vscode/test-cli": "0.0.10",
    "@vscode/test-electron": "2.4.1",
    "@vscode/vsce": "3.2.1",
    "esbuild": "0.24.2",
    "npm-run-all": "4.1.5",
    "rimraf": "6.0.1",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@9.15.1"
}
